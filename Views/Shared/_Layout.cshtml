<!DOCTYPE html>


@{
    var canCreate = User.IsInRole("Staff") || User.IsInRole("Admin");
}
<html lang="en" data-bs-theme="dark" >
<head>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ApexVolley</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/ApexVolley.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans+Condensed:wght@300&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body class="pb-0"><header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-custom shadow-sm mb-0 pb-0">
        <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <i class="fas fa-volleyball-ball me-2"></i>
                    <span class="ms-2">ApexVolley</span>
                </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3" asp-area="" asp-controller="Players" asp-action="Index">Giocatori</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3" asp-area="" asp-controller="Match" asp-action="Index">Partite</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-3" asp-area="" asp-controller="NewsPosts" asp-action="Index">News</a>
                    </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Trophy" asp-action="Index">Trofei</a>
                        </li>
                    @if(canCreate) {
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="UserManagement" asp-action="Index">Gestione utenti</a>
                        </li>
                    }
                    
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

        <style>
            .bg-custom {
                background-color: #212A37; /* blu navy sportivo */
            }

            .navbar-brand,
            .navbar-nav .nav-link {
                color: #FFFFFF !important;
                font-weight: 500;
                transition: color 0.3s ease, border-bottom 0.3s ease;
                border-bottom: 2px solid transparent;
            }
            /* ===== NAVBAR ===== */
            .navbar {
                background: var(--apex-dark-gradient) !important;
                border-bottom: 2px solid var(--apex-primary-gold) !important;
                backdrop-filter: blur(10px) !important;
                box-shadow: 0 4px 20px rgba(55, 50, 62, 0.3) !important;
                padding: 0.75rem 0 !important;
                min-height: auto !important;
            }

            .navbar-brand {
                color: var(--apex-primary-gold) !important;
                font-weight: 700;
                font-size: 1.5rem !important;
                text-shadow: 0 2px 4px rgba(0,0,0,0.3);
            }

                .navbar-brand img {
                    vertical-align: middle;
                    transition: transform 0.3s ease;
                    width: 50px !important;
                    height: 50px !important;
                }

                .navbar-brand .ms-2 {
                    font-size: 1.5rem;
                    line-height: 1;
                    color: #FFFFFF;
                }

                .navbar-brand:hover img {
                    transform: scale(1.1);
                }

            .navbar-nav .nav-link {
                color: var(--apex-light-gray) !important;
                font-weight: 500;
                transition: all 0.3s ease;
                position: relative;
                padding: 0.5rem 1rem !important;
                font-size: 1rem;
            }

                .navbar-nav .nav-link:hover {
                    color: var(--apex-primary-gold) !important;
                    transform: translateY(-1px);
                }

                .navbar-nav .nav-link.active {
                    color: var(--apex-primary-gold) !important;
                }

                .navbar-nav .nav-link::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 50%;
                    width: 0;
                    height: 2px;
                    background: var(--apex-gold-gradient);
                    transition: all 0.3s ease;
                    transform: translateX(-50%);
                }

                .navbar-nav .nav-link:hover::after,
                .navbar-nav .nav-link.active::after {
                    width: 100%;
                }

        </style>
    </header>

    <div class="container-fluid pb-0 px-0">
        <main role="main" class="pb-0">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- Bootstrap Bundle JS (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


</body>
</html>