    }

    /* Main Image Section */
    .main-image-section {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    margin-bottom: 2rem;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 209, 0, 0.1);
    }

    .main-image {
    width: 100%;
