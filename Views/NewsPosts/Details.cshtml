@model ApexVolley.Models.NewsPost

@{
    ViewData["Title"] = "Dettagli News";
}

<style>
    .news-detail-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .news-header {
        background: linear-gradient(135deg, #212A37 0%, #3A4A5C 100%);
        color: white;
        padding: 3rem 2rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

        .news-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="%23FFD100" opacity="0.1"/><circle cx="80" cy="80" r="2" fill="%23FFD100" opacity="0.1"/><circle cx="60" cy="30" r="1" fill="%23FFD100" opacity="0.15"/></svg>');
            opacity: 0.3;
        }

    .news-header-content {
        position: relative;
        z-index: 2;
    }

    .news-category {
        display: inline-block;
        background: rgba(255, 209, 0, 0.2);
        color: #FFD100;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 1rem;
        border: 1px solid rgba(255, 209, 0, 0.3);
    }

    .news-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        line-height: 1.2;
        background: linear-gradient(45deg, #FFD100, #FFA500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .news-meta {
        display: flex;
        align-items: center;
        gap: 2rem;
        flex-wrap: wrap;
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: rgba(255, 255, 255, 0.9);
        font-size: 0.95rem;
    }

    /* Main Image Section */
    .main-image-section {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        margin-bottom: 2rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 209, 0, 0.1);
    }

    .main-image {
        width: 100%;
        height: 400px;
        object-fit: cover;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .main-image:hover {
        transform: scale(1.02);
    }

    .news-content {
        background: white;
        padding: 3rem;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
        line-height: 1.8;
        font-size: 1.1rem;
        color: #2d3748;
        border: 1px solid rgba(255, 209, 0, 0.1);
    }

        .news-content p {
            margin-bottom: 1.5rem;
        }

        .news-content::first-letter {
            float: left;
            font-size: 3.5rem;
            line-height: 3rem;
            padding-right: 0.5rem;
            padding-top: 0.2rem;
            font-weight: 700;
            color: #FFD100;
        }

    /* Additional Images Gallery */
    .additional-images-section {
        background: white;
        padding: 2rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(255, 209, 0, 0.1);
    }

    .gallery-title {
        color: #212A37;
        font-weight: 700;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .image-gallery {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }

    .gallery-image {
        width: 100%;
        height: 150px;
        object-fit: cover;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .gallery-image:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        border-color: #FFD100;
    }

    /* File Attachments Section */
    .attachments-section {
        background: white;
        padding: 2rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(255, 209, 0, 0.1);
    }

    .attachments-title {
        color: #212A37;
        font-weight: 700;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .attachment-list {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .attachment-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.75rem 1rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 10px;
        text-decoration: none;
        color: #212A37;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 209, 0, 0.1);
    }

    .attachment-item:hover {
        transform: translateX(5px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        border-color: #FFD100;
        color: #212A37;
        text-decoration: none;
    }

    .file-icon {
        width: 24px;
        height: 24px;
        background: linear-gradient(45deg, #FFD100, #FFA500);
        border-radius: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #212A37;
        font-size: 12px;
        font-weight: bold;
    }

    /* Modal for Image Viewing */
    .image-modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.9);
        cursor: pointer;
    }

    .modal-content {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        max-width: 90%;
        max-height: 90%;
        border-radius: 10px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    }

    .close-modal {
        position: absolute;
        top: 20px;
        right: 30px;
        color: white;
        font-size: 40px;
        font-weight: bold;
        cursor: pointer;
        z-index: 1001;
        transition: opacity 0.3s ease;
    }

    .close-modal:hover {
        opacity: 0.7;
    }

    .action-bar {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 2rem;
        border-radius: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .action-btn {
        padding: 12px 24px;
        border-radius: 25px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        border: 2px solid transparent;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-size: 0.95rem;
    }

    .btn-back {
        background: linear-gradient(45deg, #4ECDC4, #44A08D);
        color: white;
    }

        .btn-back:hover {
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(78, 205, 196, 0.4);
            text-decoration: none;
        }

    .btn-edit {
        background: linear-gradient(45deg, #FFD100, #FFA500);
        color: #212A37;
    }

        .btn-edit:hover {
            color: #212A37;
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(255, 209, 0, 0.4);
            text-decoration: none;
        }

    .share-section {
        background: white;
        padding: 2rem;
        border-radius: 20px;
        margin-bottom: 2rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        text-align: center;
        border: 1px solid rgba(255, 209, 0, 0.1);
    }

    .share-title {
        margin-bottom: 1rem;
        color: #212A37;
        font-weight: 600;
    }

    .share-buttons {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .share-btn {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

        .share-btn:hover {
            transform: translateY(-3px);
            text-decoration: none;
        }

    .share-facebook {
        background: #3b5998;
        color: white;
    }

        .share-facebook:hover {
            box-shadow: 0 8px 25px rgba(59, 89, 152, 0.4);
            color: white;
        }

    .share-twitter {
        background: #1da1f2;
        color: white;
    }

        .share-twitter:hover {
            box-shadow: 0 8px 25px rgba(29, 161, 242, 0.4);
            color: white;
        }

    .share-whatsapp {
        background: #25d366;
        color: white;
    }

        .share-whatsapp:hover {
            box-shadow: 0 8px 25px rgba(37, 211, 102, 0.4);
            color: white;
        }

    .related-news {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 2rem;
        border-radius: 20px;
        margin-top: 2rem;
    }

    .related-title {
        color: #212A37;
        font-weight: 700;
        margin-bottom: 1rem;
        text-align: center;
    }

    @@media (max-width: 768px) {
        .news-detail-container {
            padding: 1rem;
        }

        .news-header {
            padding: 2rem 1.5rem;
        }

        .news-title {
            font-size: 2rem;
        }

        .news-content {
            padding: 2rem 1.5rem;
        }

        .action-bar {
            padding: 1.5rem;
            flex-direction: column;
            align-items: stretch;
        }

        .action-buttons {
            justify-content: center;
        }

        .news-meta {
            gap: 1rem;
        }

        .main-image {
            height: 250px;
        }

        .image-gallery {
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        }

        .gallery-image {
            height: 120px;
        }
    }

    /* Dark mode compatibility */
    @@media (prefers-color-scheme: dark) {
        .news-content {
            background: #2d3748;
            color: #e2e8f0;
        }

        .action-bar {
            background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
        }

        .share-section, .additional-images-section, .attachments-section {
            background: #2d3748;
            color: #e2e8f0;
        }

        .related-news {
            background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
            color: #e2e8f0;
        }

        .attachment-item {
            background: linear-gradient(135deg, #4a5568 0%, #2d3748 100%);
            color: #e2e8f0;
        }

        .attachment-item:hover {
            color: #e2e8f0;
        }
    }
</style>

