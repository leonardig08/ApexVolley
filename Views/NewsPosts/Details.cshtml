    object-fit: cover;
    cursor: pointer;
    transition: transform 0.3s ease;
    }

    .main-image:hover {
    transform: scale(1.02);
    }

    .news-content {
    background: white;
    padding: 3rem;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    margin-bottom: 2rem;
    line-height: 1.8;
    font-size: 1.1rem;
    color: #2d3748;
    border: 1px solid rgba(255, 209, 0, 0.1);
        word-wrap: break-word;
        overflow-wrap: break-word;
        word-break: break-word;
        white-space: normal;
    }

    .news-content p {
    margin-bottom: 1.5rem;
    }

    .news-content::first-letter {
    float: left;
    font-size: 3.5rem;
    line-height: 3rem;
    padding-right: 0.5rem;
    padding-top: 0.2rem;
    font-weight: 700;
    color: #FFD100;
    }

    /* Additional Images Gallery */
