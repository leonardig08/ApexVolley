@model IEnumerable<ApexVolley.Models.NewsPost>

@{
    ViewData["Title"] = "News";
}

@{
    var canCreate = User.IsInRole("Staff") || User.IsInRole("Admin");
}

<style>
    .news-hero-flex {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 3rem;
        flex-wrap: wrap;
    }

    .news-hero-text {
        max-width: 600px;
        flex: 1 1 300px;
        text-align: left;
    }

    .news-hero-image {
        flex: 1 1 300px;
    }

        .news-hero-image img {
            max-width: 100%;
            height: auto;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

    .news-hero {
        background: linear-gradient(135deg, #212A37 0%, #3A4A5C 100%);
        padding: 4rem 0;
        margin: -1rem -15px 3rem -15px;
        position: relative;
        overflow: hidden;
    }

        .news-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="%23FFD100" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="%23FFD100" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="%23FFD100" opacity="0.15"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
            opacity: 0.3;
        }

    .news-hero-content {
        position: relative;
        z-index: 2;
        text-align: center;
        color: white;
    }

    .news-hero h1 {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        background: linear-gradient(45deg, #FFD100, #FFA500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

        .news-hero h1.headline {
            display: flex;
            align-items: center; /* Allinea verticalmente emoji e testo */
            justify-content: center; /* Centra orizzontalmente */
            gap: 0.5rem; /* Spazio tra emoji e testo */
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

    .gradient-text {
        background: linear-gradient(45deg, #FFD100, #FFA500);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .emoji {
        -webkit-background-clip: initial;
        -webkit-text-fill-color: initial;
        background-clip: initial;
    }


    .news-hero p {
        font-size: 1.3rem;
        opacity: 0.9;
        max-width: 600px;
        margin: 0 auto;
    }

    .create-btn {
        background: linear-gradient(45deg, #FFD100, #FFA500);
        border: none;
        padding: 12px 30px;
        border-radius: 50px;
        color: #212A37;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 8px 25px rgba(255, 209, 0, 0.3);
        margin-top: 2rem;
    }

        .create-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 35px rgba(255, 209, 0, 0.4);
            color: #212A37;
            text-decoration: none;
        }

    .news-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .news-card {
        background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
        position: relative;
        border: 1px solid rgba(255, 209, 0, 0.1);
        display: flex;
        flex-direction: column;
        min-height: 400px;
    }

        .news-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 50px rgba(0,0,0,0.15);
            border-color: rgba(255, 209, 0, 0.3);
        }

        .news-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #FFD100, #FFA500, #FF6B6B, #4ECDC4);
            background-size: 300% 100%;
            animation: gradient-shift 3s ease infinite;
        }

    @@keyframes gradient-shift {
        0%, 100%

    {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    }

    .news-card-header {
        padding: 1.5rem 1.5rem 1rem;
        position: relative;
    }

    .news-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: #212A37;
        margin-bottom: 0.5rem;
        line-height: 1.3;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .news-date {
        color: #6c757d;
        font-size: 0.9rem;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .news-card-main {
        display: flex;
        flex: 1;
        padding: 0 1.5rem;
        gap: 1.5rem;
        min-height: 200px;
    }

    .news-content-section {
        flex: 2;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .news-image-section {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem 0;
    }

    .news-image {
        width: 100%;
        max-width: 500px;
        height: auto;
        object-fit: cover;
        border-radius: 15px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        transition: all 0.3s ease;
    }

    .news-card:hover .news-image {
        transform: scale(1.05);
        box-shadow: 0 12px 35px rgba(0,0,0,0.2);
    }

    .news-content {
        color: #495057;
        line-height: 1.6;
  
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
        overflow: hidden;
        margin-bottom: 1rem;
        flex: 1;
        word-wrap: break-word;
        overflow-wrap: break-word;
        word-break: break-word;
        white-space: normal;
    }

    .news-actions {
        padding: 0 1.5rem 1.5rem;
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        margin-top: auto;
    }

    .action-btn {
        padding: 8px 16px;
        border-radius: 25px;
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: 500;
        transition: all 0.3s ease;
        border: 2px solid transparent;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .btn-details {
        background: linear-gradient(45deg, #4ECDC4, #44A08D);
        color: white;
    }

        .btn-details:hover {
            color: white;
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(78, 205, 196, 0.4);
        }

    .btn-edit {
        background: linear-gradient(45deg, #FFD100, #FFA500);
        color: #212A37;
    }

        .btn-edit:hover {
            color: #212A37;
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(255, 209, 0, 0.4);
        }

    .btn-delete {
        background: linear-gradient(45deg, #FF6B6B, #FF5252);
        color: white;
    }

        .btn-delete:hover {
            color: white;
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(255, 107, 107, 0.4);
        }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 20px;
        margin-top: 2rem;
    }

    .empty-state-icon {
        font-size: 4rem;
        color: #adb5bd;
        margin-bottom: 1rem;
    }

    .empty-state h3 {
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .empty-state p {
        color: #6c757d;
    }

    @@media (max-width: 768px) {
        .news-hero h1

    {
        font-size: 2.5rem;
    }

    .news-hero p {
        font-size: 1.1rem;
    }

    .news-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }

    .news-hero {
        padding: 2rem 0;
    }

    .news-card-main {
        flex-direction: column;
        min-height: auto;
    }

    .news-image-section {
        order: -1;
        padding: 0 0 1rem 0;
    }

    .news-image {
        max-width: 100%;
        max-height: 200px;
    }

    }

    /* Dark mode compatibility */
    @@media (prefers-color-scheme: dark) {
        .news-card

    {
        background: linear-gradient(145deg, #2d3748 0%, #1a202c 100%);
        color: #e2e8f0;
    }

    .news-title {
        color: #f7fafc;
    }

    .news-content {
        color: #cbd5e0;
    }

    .empty-state {
        background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
        color: #e2e8f0;
    }


    }

    @@keyframes slideInFromLeft {
        from {
            transform: translateX(-100px);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    @@keyframes slideInFromRight {
        from {
            transform: translateX(100px);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    @@keyframes fadeInUp {
        from {
            transform: translateY(30px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @@keyframes gradientShift {
        0%, 100% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px) rotate(0deg);
            opacity: 0.7;
        }

        50% {
            transform: translateY(-20px) rotate(180deg);
            opacity: 1;
        }
    }
</style>

<div class="d-flex align-content-center justify-content-center">
    <div class="hero-header ">
        <div class="hero-background">
            <div class="floating-orb orb-1"></div>
            <div class="floating-orb orb-2"></div>
            <div class="floating-orb orb-3"></div>
            <div class="volleyball-pattern"></div>
        </div>
        <h1 class="hero-title">
           
            <span class="title-accent">Apex Volley News</span>
        </h1>
        <p class="hero-subtitle">
            Resta aggiornato con le ultime notizie, risultati e novità dal mondo della nostra squadra
            
        </p>

        @if (canCreate)
        {
            <div class="hero-action">
                <a asp-action="Create" class="btn-premium">
                    <span class="btn-icon">📰</span>
                    <span>Crea Nuova News</span>
                    <div class="btn-shine"></div>
                </a>
            </div>
        }
    </div>
</div>



<div class="container">
    @if (Model != null && Model.Any())
    {
            @foreach (var item in Model)
            {
                <article class="news-card">
                    <div class="news-card-header">
                        <h2 class="news-title">@Html.DisplayFor(modelItem => item.Title)</h2>
                        <div class="news-date">
                            <svg width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                            </svg>
                            @Html.DisplayFor(modelItem => item.PublishedAt)
                        </div>
                    </div>

                    <div class="news-card-main">
                        <div class="news-content-section">
                            <div class="news-content">
                                @{
                                    var truncatedContent = item.Content?.Length > 50
                                    ? item.Content.Substring(0, 50) + "..."
                                    : item.Content;
                                }
                                @Html.Raw(truncatedContent)
                            </div>
                        </div>

                        <div class="news-image-section">
                            <img src="/@item.MainImagePath" alt="@item.Title" class="news-image" />
                        </div>
                    </div>

                    <div class="news-actions">
                        <a asp-action="Details" asp-route-id="@item.Id" class="action-btn btn-details">
                            <svg width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z" />
                            </svg>
                            Dettagli
                        </a>

                        @if (canCreate)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn btn-edit">
                                <svg width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708L10.5 8.207l-3-3L12.146.146zM11.207 9l-3-3L2.5 11.707V14.5a.5.5 0 0 0 .5.5h2.793L11.207 9zM1 13.5A1.5 1.5 0 0 1 2.5 12l8.396-8.396 3 3L5.5 15a1.5 1.5 0 0 1-1.5-1.5v-1z" />
                                </svg>
                                Modifica
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="action-btn btn-delete">
                                <svg width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                </svg>
                                Elimina
                            </a>
                        }
                    </div>
                </article>
            }
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">📰</div>
            <h3>Nessuna news disponibile</h3>
            <p>Al momento non ci sono notizie da visualizzare. Torna più tardi per gli aggiornamenti!</p>

            @if (canCreate)
            {
                <a href="@Url.Action("Create")" class="create-btn" style="margin-top: 1rem;">
                    <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg>
                    Crea la Prima News
                </a>
            }
        </div>
    }
</div>