            color: var(--apex-light-gray);
            border-top: 2px solid var(--apex-primary-gold);
            padding: 2rem 0;
            margin-top: 4rem;
            box-shadow: 0 -5px 20px rgba(55, 50, 62, 0.3);
        }

        /* ===== RESPONSIVE ===== */
        @@media (max-width: 768px) {
            .hero-text

        {
            padding: 2.5rem 2rem;
            margin: 0 1rem;
        }

        .hero-text h1 {
            font-size: 3.2rem;
        }

        .hero-buttons .btn {
            display: block;
            margin: 0.5rem 0;
        }

        .navbar-brand {
            font-size: 1.1rem !important;
        }

            .navbar-brand img {
                width: 30px !important;
                height: 30px !important;
            }

        }

        .background-video {
            position: absolute;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            z-index: 0;
            transform: translate(-50%, -50%);
            object-fit: cover;
            pointer-events: none;
            overflow: hidden;
            
        }

        .hero-background > *:not(.background-video) {
            position: relative;
            z-index: 1;
        }

        .hero-text-background {
            display: inline-block;
            padding: 1.5rem 2rem;
            border-radius: 20px;
            background: rgba(0, 0, 0, 0.4); /* Fondo scuro trasparente */
            backdrop-filter: blur(6px); /* Effetto vetro smerigliato */
            -webkit-backdrop-filter: blur(6px);
            color: white;
            text-align: center;
