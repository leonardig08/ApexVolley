    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans+Condensed:wght@300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        /* ===== APEX VOLLEY - GLOBAL STYLES ===== */
        /* Color Palette Variables */
        :root {
            --apex-light-gray: #BFBDC1;
            --apex-medium-gray: #6D6A75;
            --apex-dark-gray: #37323E;
            --apex-primary-gold: #DEB841;
            --apex-secondary-gold: #DE9E36;
            /* Gradient combinations */
            --apex-gold-gradient: linear-gradient(135deg, #DEB841 0%, #DE9E36 100%);
            --apex-dark-gradient: linear-gradient(135deg, #37323E 0%, #6D6A75 100%);
            --apex-bg-gradient: linear-gradient(135deg, #37323E 0%, #6D6A75 50%, #BFBDC1 100%);
        }

        /* Reset and Base Styles */
        * {
            box-sizing: border-box;
        }

        html, body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--apex-bg-gradient);
            color: var(--apex-light-gray);
            min-height: 100vh;
        }


        /* Hero Section Adjustments */
        .hero-section {
            position: relative;
            height: 100vh;
            width: 100%;
            /*background: linear-gradient(135deg, rgba(55, 50, 62, 0.9) 0%, rgba(109, 106, 117, 0.7) 50%, rgba(191, 189, 193, 0.8) 100%), radial-gradient(circle at 30% 70%, rgba(222, 184, 65, 0.2) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(222, 158, 54, 0.15) 0%, transparent 50%);*/
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            margin-top: -20px; /* Compensa la navbar più piccola */
        }

        .hero-text {
            /*background: linear-gradient(135deg, rgba(55, 50, 62, 0.95) 0%, rgba(109, 106, 117, 0.9) 100%);*/
            backdrop-filter: blur(20px);
            border: 1px solid rgba(222, 184, 65, 0.3);
            padding: 4rem;
            border-radius: 20px;
            max-width: 800px;
            box-shadow: 0 20px 60px rgba(55, 50, 62, 0.8), 0 0 0 1px rgba(222, 184, 65, 0.2);
            text-align: center;
            position: relative;
        }

            .hero-text h1 {
                font-weight: 800;
                font-size: 4.5rem;
                margin-bottom: 1.5rem;
                /*background: linear-gradient(135deg, #DEB841 0%, #DE9E36 50%, #DEB841 100%);*/
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                text-shadow: 0 4px 8px rgba(0,0,0,0.3);
            }

            .hero-text .lead {
                font-size: 1.4rem;
                color: var(--apex-light-gray);
                margin-bottom: 2rem;
            }

        .hero-buttons .btn {
            font-size: 1.1rem;
            padding: 0.8rem 2rem;
        }

        /* ===== BUTTONS ===== */
        .btn-primary {
            background: var(--apex-gold-gradient);
            border: none;
            color: var(--apex-dark-gray);
            font-weight: 600;
            padding: 0.75rem 2rem;
            border-radius: 10px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(222, 184, 65, 0.3);
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #DE9E36 0%, #DEB841 100%);
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(222, 184, 65, 0.4);
                color: var(--apex-dark-gray);
            }

        .btn-outline-primary {
            border: 2px solid var(--apex-primary-gold);
            color: var(--apex-primary-gold);
            background: transparent;
            font-weight: 600;
            padding: 0.75rem 2rem;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

            .btn-outline-primary:hover {
                background: var(--apex-gold-gradient);
                color: var(--apex-dark-gray);
                transform: translateY(-1px);
            }

        /* ===== CARDS ===== */
        .card {
            background: var(--apex-dark-gradient);
            border: 1px solid var(--apex-medium-gray);
            border-radius: 16px;
            box-shadow: 0 8px 32px rgba(55, 50, 62, 0.3);
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 45px rgba(55, 50, 62, 0.4);
                border-color: var(--apex-primary-gold);
            }

        .card-header {
            background: var(--apex-gold-gradient);
            color: var(--apex-dark-gray);
            font-weight: 600;
            border-bottom: none;
            border-radius: 16px 16px 0 0 !important;
        }

        .card-body {
            color: var(--apex-light-gray);
        }

        .card-title {
            color: var(--apex-dark-gray);
            font-weight: 700;
        }

        .card-text {
            color: var(--apex-light-gray);
        }

        .text-apex-gold {
            color: var(--apex-primary-gold) !important;
        }

        /* Particles Animation */
        .particle {
            position: absolute;
            background: rgba(222, 184, 65, 0.6);
            border-radius: 50%;
            pointer-events: none;
        }

        .particle-1 {
            width: 4px;
            height: 4px;
            top: 20%;
            left: 10%;
            animation: float 6s ease-in-out infinite;
        }

        .particle-2 {
            width: 6px;
            height: 6px;
            top: 60%;
            right: 15%;
            animation: float 8s ease-in-out infinite reverse;
        }

        .particle-3 {
            width: 3px;
            height: 3px;
            top: 80%;
            left: 80%;
            animation: float 7s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0px) rotate(0deg);
            opacity: 0.7;
        }

        50% {
            transform: translateY(-20px) rotate(180deg);
            opacity: 1;
        }

        }

        .fun-fact-item:hover,
        .contact-item:hover {
            background: linear-gradient(135deg, rgba(222, 184, 65, 0.15) 0%, rgba(222, 184, 65, 0.08) 100%) !important;
            transform: translateX(10px);
            border-color: var(--apex-primary-gold) !important;
        }

        /* Footer - Solo quello in fondo */
        footer {
