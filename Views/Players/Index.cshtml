@model IEnumerable<ApexVolley.Models.Player>
@{
    ViewData["Title"] = "I giocatori";
    var canCreate = User.IsInRole("Staff") || User.IsInRole("Admin");
}
<h1 class="mb-4">I giocatori della nostra squadra</h1>

@if (canCreate)
{
    <p><a asp-action="Create" class="btn btn-primary mb-4">Aggiungi Nuovo Giocatore</a></p>
}

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var player in Model)
    {
        var imagePath = $"/images/players/{player.NumeroMaglia}.jpg";
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="@imagePath" class="card-img-top" alt="Numero @player.NumeroMaglia"
                     onerror="this.onerror=null;this.src='/images/players/default.jpg';" style="object-fit: cover; height: 200px;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@player.Nome @player.Cognome</h5>
                    <p class="card-text"><strong>#@player.NumeroMaglia</strong> - @player.Ruolo</p>
                    <button class="btn btn-outline-secondary mt-auto" type="button" data-bs-toggle="collapse" data-bs-target="#details-@player.Id">
                        Dettagli
                    </button>
                    <div class="collapse mt-2" id="details-@player.Id">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Data di nascita:</strong> @player.DataNascita.ToShortDateString()</li>
                            <li class="list-group-item"><strong>Altezza:</strong> @player.AltezzaCm cm</li>
                        </ul>
                        @if (canCreate)
                        {
                            <div class="mt-2">
                                <a asp-action="Edit" asp-route-id="@player.Id" class="btn btn-sm btn-warning">Modifica</a>
                                <a asp-action="Delete" asp-route-id="@player.Id" class="btn btn-sm btn-danger">Elimina</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
